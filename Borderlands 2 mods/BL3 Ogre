            
            
            BL3 Ogre - greatly reduces the bullet speed and accuracy of the Ogre in exchange for around 10% dmg 25% fire rate and no spinup time to make it feel like the borderlands 3 ogre. 
            On a non slippery version you will clearly see the rocket trails and smoke (speed comparable to the harold at closer ange), using a slippery version helps a lot with the slow bullet speed.
            The weapon becomes a close range beast but hitting mid distance crits/ or moving enemies is much harder.
            
            
            
            Made by Colossum3
            
            
            
       
            set GD_Aster_Weapons.FiringModes.Bullet_Assault_Ogre Speed 220.000000
            
            
            set GD_Aster_Weapons.AssaultRifles.AR_Barrel_Vladof_Ogre WeaponAttributeEffects ((AttributeToModify=AttributeDefinition'D_Attributes.Weapon.WeaponDamage',ModifierType=MT_Scale,BaseModifierValue=(BaseValueConstant=1.000000,BaseValueAttribute=None,InitializationDefinition=None,BaseValueScaleConstant=0.580000)),(AttributeToModify=AttributeDefinition'D_Attributes.Weapon.WeaponSpread',ModifierType=MT_PreAdd,BaseModifierValue=(BaseValueConstant=1.350000,BaseValueAttribute=None,InitializationDefinition=None,BaseValueScaleConstant=2.000000)),(AttributeToModify=AttributeDefinition'D_Attributes.Weapon.WeaponClipSize',ModifierType=MT_PreAdd,BaseModifierValue=(BaseValueConstant=28.000000,BaseValueAttribute=None,InitializationDefinition=None,BaseValueScaleConstant=1.000000)),(AttributeToModify=AttributeDefinition'D_Attributes.Weapon.WeaponExtraShotChance',ModifierType=MT_PreAdd,BaseModifierValue=(BaseValueConstant=0.000000,BaseValueAttribute=AttributeDefinition'D_Attributes.WeaponManufacturer.Weapon_Is_Torgue',InitializationDefinition=None,BaseValueScaleConstant=0.250000)))


         

            set GD_Aster_Weapons.AssaultRifles.AR_Barrel_Vladof_Ogre AttributeSlotUpgrades ((SlotName="WeaponSpread",GradeIncrease=-4,bActivateSlot=True),(SlotName="WeaponFireRate",GradeIncrease=26,bActivateSlot=True),(SlotName="WeaponAccuracyImpulse",GradeIncrease=8,bActivateSlot=True),(SlotName="WeaponMagSize",GradeIncrease=10,bActivateSlot=True),,(SlotName="WeaponDamage",GradeIncrease=-3,bActivateSlot=True),(SlotName="AccuracyMax",GradeIncrease=5,bActivateSlot=True),(SlotName="AccuracyRegen",GradeIncrease=5,bActivateSlot=True),(SlotName="WeaponBurstImpulse",GradeIncrease=3,bActivateSlot=True))

        #</Attributes>

        #<No spinning>

            set GD_Aster_Weapons.AssaultRifles.AR_Barrel_Vladof_Ogre NumPhysicalBarrelsToFireFrom 0 

            set GD_Aster_Weapons.AssaultRifles.AR_Barrel_Vladof_Ogre bIsSpinningEnabled True

            set GD_Aster_Weapons.AssaultRifles.AR_Barrel_Vladof_Ogre SpinUpDuration (BaseValueConstant=0.000000,BaseValueAttribute=None,InitializationDefinition=None,BaseValueScaleConstant=1.000000)

